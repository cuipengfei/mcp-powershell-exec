  "repository": {
    "type": "git",
    "url": "https://github.com/cuipengfei/mcp-powershell-exec.git"
  },
  "homepage": "https://github.com/cuipengfei/mcp-powershell-exec#readme",
  "bugs": {
    "url": "https://github.com/cuipengfei/mcp-powershell-exec/issues"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {},
