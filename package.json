{
  "name": "mcp-powershell-exec",
  "version": "1.0.0",
  "description": "PowerShell MCP server with improved SOLID architecture using Bun and TypeScript. Easy installation with bunx.",
  "main": "powershell.ts",
  "type": "module",
  "bin": {
    "mcp-powershell-exec": "./bin/mcp-powershell-exec.ts"
  },
  "files": [
    "powershell.ts",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run powershell.ts",
    "dev": "bun --watch powershell.ts",
    "build": "bun build powershell.ts --outdir dist --target bun",
    "lint": "tsc --noEmit",
    "prepublishOnly": "bun run lint && bun run build"
  },
  "keywords": [
    "mcp",
    "powershell",
    "bun",
    "typescript",
    "claude",
    "anthropic",
    "model-context-protocol",
    "windows",
    "automation",
    "script-execution"
  ],
