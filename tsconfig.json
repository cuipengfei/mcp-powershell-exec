{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types", "@types/node"],
    "lib": ["ES2022"]
  },
  "include": [
    "*.ts",
    "bin/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
